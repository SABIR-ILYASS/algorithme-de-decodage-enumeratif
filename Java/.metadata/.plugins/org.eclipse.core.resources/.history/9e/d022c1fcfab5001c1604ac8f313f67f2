package fr.codageerreur;

public class EncodageEnumerative {
	
	protected int t;
	protected int n;
	protected int x;
	
	// getters and setters
	public void setN(int n) {
		this.n = n;
	}
	
	public void setT(int t) {
		this.t = t;
	}
	
	public void setX(int x) {
		this.x = x;
	}
	
	public int getN() {
		return this.n;
	}
	
	public int getT() {
		return t;
	}
	
	 public int getX() {
		return x;
	}
	
	public long factorielle(int number) {
		long fact = 1;
		for (int i = 2; i <= number; i++)
			fact *= i;
		return fact;
	}
	
	public long arrangements(int number, int k) {
		if (k > number)
			return 0;
		else {
			long arrangement = 1;
			for (int i = number - k + 1; i <= number; i++)
				arrangement *= i;
			return arrangement;
		}
	}
	
	public long binomial(int i,int j) {
		return (long) (this.arrangements(i, j) / this.factorielle(j));
	}
	
	public int inverseBinomial(int x, int j) {
		int i = 0;
		while ( this.binomial(i, j) <= x)
			i++;
		return (i - 1);
	}
	
	public long phi() {
		int n = this.getN();
		int t = this.getT();
		int x = this.getX();
		
		if ( x < 0 || x >= this.binomial(n, t)) {
			return (Long) null;
		}

		else {
			int j = t;
			int phi = 0;
			while(j > 0) {
				int ij = this.inverseBinomial(x, j);
				phi += Math.pow(2, ij);
			}
			return phi;
		}
	}
}
